#!/bin/bash
set -e

echo "ðŸš€ Setting up Birthday Bot development environment..."

# Check Python version
PYTHON_VERSION=$(python3 --version 2>&1 | awk '{print $2}')
REQUIRED_VERSION="3.10"

if ! python3 -c "import sys; exit(0 if sys.version_info >= (3, 10) else 1)"; then
    echo "âŒ Python 3.10+ is required. Current version: $PYTHON_VERSION"
    exit 1
fi

echo "âœ… Python version: $PYTHON_VERSION"

# Create virtual environment
if [ ! -d ".venv" ]; then
    echo "ðŸ“¦ Creating virtual environment..."
    python3 -m venv .venv
else
    echo "âœ… Virtual environment already exists"
fi

# Activate virtual environment
echo "ðŸ”§ Activating virtual environment..."
source .venv/bin/activate

# Upgrade pip
echo "ðŸ“¦ Upgrading pip..."
pip install --upgrade pip wheel setuptools

# Install dependencies
echo "ðŸ“¦ Installing dependencies..."
pip install -e ".[dev]"

# Create .env from example if it doesn't exist
if [ ! -f ".env" ]; then
    if [ -f ".env.example" ]; then
        echo "ðŸ“ Creating .env from .env.example..."
        cp .env.example .env
        echo "âš ï¸  Please update .env with your actual values"
    fi
fi

# Create necessary directories
echo "ðŸ“ Creating necessary directories..."
mkdir -p data logs

# Run initial security scan
echo "ðŸ”’ Running security scan..."
echo "   Checking dependencies with safety..."
safety check || true
echo "   Running bandit security linter..."
bandit -r birthday_bot/ || true

# Run tests
echo "ðŸ§ª Running tests..."
pytest tests/ -v --tb=short || echo "âš ï¸  Some tests failed. Please fix them."

# Setup git hooks
if [ -d ".git" ]; then
    echo "ðŸ”— Setting up git hooks..."
    cat > .git/hooks/pre-commit << 'EOF'
#!/bin/bash
# Run tests before commit
source .venv/bin/activate
echo "Running tests..."
pytest tests/ --tb=short -q
EOF
    chmod +x .git/hooks/pre-commit
fi

echo ""
echo "âœ… Development environment setup complete!"
echo ""
echo "To activate the virtual environment, run:"
echo "  source .venv/bin/activate"
echo ""
echo "To run the application:"
echo "  python -m birthday_bot.app"
echo ""
echo "To run tests:"
echo "  pytest tests/ -v"
echo ""
echo "To run security scans:"
echo "  safety check"
echo "  bandit -r birthday_bot/"
echo "  pip-audit"